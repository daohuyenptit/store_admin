<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.product.addProduct.AddProductActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/br_account"
                android:layout_marginBottom="10dp"
                android:id="@+id/img_product"
                android:layout_width="130dp"
                android:layout_height="130dp" />



            <LinearLayout
                android:background="@color/md_light_blue_50"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginBottom="@dimen/view_margin"/>

                <EditText
                    android:id="@+id/et_name"
                    android:background="@null"
                    android:hint="Tên sản phẩm"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginBottom="@dimen/view_margin"
                    android:layout_marginTop="@dimen/view_margin"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_des"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:hint="Mô tả sản phẩm"
                        android:maxLines="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_background_textview"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/view_margin"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/md_grey_300"
                />


            <LinearLayout
                android:clickable="true"
                android:id="@+id/lnGroup"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_danhmuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:text="Nhóm sản phẩm"
                    android:maxLines="3"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_category"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="Chọn"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:maxLines="3"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_pay"
                    android:src="@drawable/ic_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/view_margin"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:text="Giá"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@null"
                    android:hint="Đặt giá"
                    android:id="@+id/et_price"
                    android:textSize="15dp"
                    android:textColor="@color/md_red_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/view_margin"/>

        </LinearLayout>

    </ScrollView>

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/bt_add"
            android:background="@drawable/custom_buttom"
            android:text="Thêm"
            android:textColor="@color/colorMaterialWhite"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"/>


</LinearLayout>