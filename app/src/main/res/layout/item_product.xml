<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="169dp"
    android:layout_height="260dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_logoProduct"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/br_account"/>



        <TextView
            android:padding="5dp"
            android:id="@+id/tv_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/md_green_500"
            android:lines="1"
            android:layout_marginTop="8dp"
            android:text="Mỹ phẩm"
            android:textSize="@dimen/font_size_12sp" />
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_price"
            android:textColor="#f10707"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1.000.000 VND" />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_marginTop="3dp"
            android:id="@+id/rating_product"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rating_height"
            android:layout_below="@+id/tv_price"
            android:isIndicator="true"
            android:rating="4.5"
            app:mrb_fillBackgroundStars="true"
            app:mrb_progressTint="@color/md_yellow_700"
            android:layout_toRightOf="@+id/img_product_detail"/>


    </LinearLayout>
</android.support.v7.widget.CardView>