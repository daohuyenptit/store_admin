<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageButton
        android:visibility="gone"
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_select"
        android:layout_marginTop="50dp" />
    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_inform"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:text="Tên người nhận "
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:text="Đào Thị Huyền"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_name"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_date"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:text="Ngày mua "
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:text="_/_/2018"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_time"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_address"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:text="Địa chỉ nhận "
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_address"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_inform"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:text="Đơn vị vận chuyển "
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_transport"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_pay"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"

            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:text="Thanh toán "
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_pay"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="50dp"
            android:textColor="@color/md_red_400"
            android:textSize="15dp"
            android:text="Tổng tiền "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="50dp"
            android:textSize="15dp"
            android:text="0 Đ"
            android:id="@+id/txt_total"
            android:textColor="@color/md_red_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/view_margin"/>




</LinearLayout>
</LinearLayout>